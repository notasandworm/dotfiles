#!/usr/bin/env python3
import webbrowser
import sys
from urllib.parse import quote_plus

if len(sys.argv) > 1:
    # Join all arguments past the script name into a single query string
    query = " ".join(sys.argv[1:])
    # URL-encode the query string (handles spaces, symbols, etc.)
    encoded_query = quote_plus(query)
    url = f"https://www.youtube.com/results?search_query={encoded_query}"
    webbrowser.open(url)
else:
    print("No search terms provided. Opening YouTube homepage.")
    # Open YouTube homepage when no search terms supplied
    webbrowser.open("https://www.youtube.com/")
