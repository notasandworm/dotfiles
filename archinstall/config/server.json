{
  "bootloader": "Limine",
  "packages": [
    "base",
    "base-devel",
    "cloudflared",
    "docker",
    "docker-compose",
    "lazydocker",
    "git",
    "openssh",
    "rsync",
    "ufw",
    "vim",
    "fail2ban",
    "lynis",
    "rkhunter"
  ],
  "network_config": {
    "type": "manual",
    "nics": [
      {
        "iface": "en*",
        "dhcp": true
      }
    ]
  },
  "kernels": ["linux", "linux-lts"],
  "profile_config": {
    "gfx_driver": null,
    "greeter": null,
    "profile": {
      "custom_settings": {
        "Docker": {},
        "sshd": {}
      },
      "details": ["Docker", "sshd"],
      "main": "Server"
    }
  },
  "timezone": "America/Winnipeg"
}
